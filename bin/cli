#!/usr/bin/env bash

cd "$(dirname "$0")"
cd ../

if [ ! -d ./project ]; then
  mkdir ./project
  cp -r ./projectTemplate/* ./project
fi

docker rm engine-core >/dev/null 2>&1

docker build -t engine-core .

docker run --rm -it --name engine-core -p 8888:8888 -v ./project:/usr/src/app/project engine-core
